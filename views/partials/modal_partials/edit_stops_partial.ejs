<!-- edit trip modal trigger -->
<section>
  <div class="container flex-row flex-wrap pe-2 text-end" style="max-width: 45rem; font-size: 1rem;">
    <a href="" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#edit-stop-modal">
      Edit Stop
    </a>
  </div>
</section>
<!-- edit-trip-details modal -->
<div class="modal fade" id="edit-stop-modal" tabindex="-1" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title"> Edit Stop Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
      </div>
      <div class="modal-body">
        <form action="/users/<%= user.id %>/trips/<%= trip.id %>/stops/<%= stop.id %>?_method=PUT" method="POST">
            <label for="stopName">Stop Name</label>
            <input name="stopName" type="text" class="form-control mb-3" id="stopName" value="<%= stop.stopName %>">

            <label for="stopAdd">Address</label>
            <input name="stopAdd" type="text" class="form-control mb-3" id="stopAdd" value="<%= stop.address %>">

            <label for="stopType">Type</label>
            <input name="stopType" type="text" class="form-control mb-3" id="stopType" value="<%= stop.type %>">

            <label for="arrival">Arrival</label>
            <input name="arrival" type="text" class="form-control mb-3" id="arrival" value="<%= stop.arrival %>">

            <label for="departure">Departure</label>
            <input name="departure" type="text" class="form-control mb-3" id="departure" value="<%= stop.departure %>">

            <label for="interest">Interest Level</label>
            <input name="interest" type="text" class="form-control mb-3" id="interest" value="<%= stop.interest %>">

            <label for="transportation">Transportation</label>
            <input name="transportation" type="text" class="form-control mb-3" id="transportation" value="<%= stop.transportation %>">
            
            <label for="stopRes">Reservation/Confirmation #:</label>
            <input name="stopRes" type="text" class="form-control mb-3" id="stopRes" value="<%= stop.resNum %>">
            
            <label for="stopNotes" class="form-label">Notes</label>
            <textarea name="stopNotes" class="form-control mb-3" id="stopNotes" rows="3" value="<%= stop.notes %>"></textarea>
            
            <button class="btn btn-success" type="submit">Update</button>
          </form>
          <button class="btn btn-danger mt-3" data-bs-target="#delete-stop-modal" data-bs-toggle="modal">Remove</button>
        </div>
    </div>
  </div>
</div>

<!-- delete-trip-details modal -->
<div class="modal fade" id="delete-stop-modal" tabindex="-1" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modal-title"> Delete Accommodation</h5>
          <button class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
        </div>
        <div class="modal-body">
          <p>If you wish to remove this stop, please hit "Delete".</p>
        </div>
        <div class="modal-footer">
          <!-- DELETE ACCOMMODATION FORM -->
          <button class="btn btn-primary" data-bs-target="#edit-stop-modal" data-bs-toggle="modal">
            Back to Edit
          </button>
          <form action="/users/<%= user.id %>/trips/<%= trip.id %>/stops/<%= stop.id %>?_method=DELETE" method="POST"> 
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>
        </div>
    </div>
  </div>
</div>